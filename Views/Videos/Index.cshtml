@model IEnumerable<video.Models.Video>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VideoAutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoTitulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalGravação)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoExtencao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoDuracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoAssunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoDescricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VideoAutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoTitulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalGravação)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoExtencao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoDuracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoAssunto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoDescricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VideoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VideoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VideoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
